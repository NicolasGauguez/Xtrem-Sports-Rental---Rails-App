<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <% if current_page?("/") %> home-navbar <% end %> <% unless current_page?("/") %> white-navbar <% end %>">
  <%= link_to "/", class: "navbar-brand" do %>
        <%= image_tag "https://res.cloudinary.com/dcj85wvte/image/upload/v1613468890/logo_size_ce3zg1.jpg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <% if policy(Equipment).show? %>
          <%= link_to "Find cool gear", equipments_path(), class: "nav-link" %>
        <% end %>
      </li>
      <li class="nav-item">
        <% if policy(Equipment).create? %>
          <%= link_to "Share my gear", new_equipment_path(), class: "nav-link" %>
        <% end %>
      </li>

      <!-- <li><%=  current_user.first_name if user_signed_in? %></li> -->

      <li class="nav-item dropdown">
        <% if user_signed_in? && current_user.avatar.attached?  %>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="<%= cl_image_path current_user.avatar.key, height: 300, width: 300, crop: :fill %>" />
        <% else %>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://creai-grand-est.fr/bundles/admin/images/user-empty-avatar.png" />
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Profile", "/dashboard?tab=profile", class: "dropdown-item" %>
          <%= link_to "Bookings", "/dashboard?tab=bookings", class: "dropdown-item" %>
          <%= link_to "Equipment", "/dashboard?tab=equipment", class: "dropdown-item" %>
          <% if user_signed_in? %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% else %>
            <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
          <% end %>

          </div>
      </li>
    </ul>
  </div>
</div>
